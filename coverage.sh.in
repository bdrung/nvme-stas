log "Invoking @STACD_PROCNAME@ --version"
coverage run --rcfile=.coveragerc @STACD_PROCNAME@ --version
log "Invoking @STACD_PROCNAME@ --idl"
coverage run --rcfile=.coveragerc @STACD_PROCNAME@ --idl /tmp/@STACD_PROCNAME@.idl

################################################################################
